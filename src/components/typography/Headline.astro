---
import HeadlineData from './headline.bookshop.yml';

export interface Props {
  title?: string; 
  kicker?: string; 
  subhead?: string;
  style?: string; 
}

const {
  title = HeadlineData.title,
  kicker = HeadlineData.kicker,
  subhead = HeadlineData.subhead,
  style = HeadlineData.style
} = Astro.props;
---

<div class={`headline ${style}`}>
  {kicker && <p class="text-sm text-gray-500 uppercase tracking-widest">{kicker}</p>}
  <h2 class="text-3xl font-bold text-black">{title}</h2>
  {subhead && <p class="text-lg text-gray-700">{subhead}</p>}
</div>
